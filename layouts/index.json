{{- $.Scratch.Add "index" slice -}}
{{- range .Site.RegularPages -}}
    {{- $.Scratch.Add "index" (dict 
    	"title" .Title 
    	"tags" (cond (isset .Params "tags") .Params.tags slice)
    	"content" .Plain 
    	"img" (index (.Resources.ByType "image") 0).RelPermalink
    	"link" .RelPermalink) -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}
